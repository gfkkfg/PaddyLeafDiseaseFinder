<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/detection_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder" />

        <TextView
            android:id="@+id/disease_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/detection_image"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:text="Disease Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/detection_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/detection_image"
            android:layout_below="@id/disease_name"
            android:text="Date: 2024-12-01 12:00"
            android:textSize="14sp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/confidence_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/detection_image"
            android:layout_below="@id/detection_date"
            android:text="Confidence: 85.00%"
            android:textSize="14sp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/detection_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/detection_image"
            android:layout_below="@id/confidence_score"
            android:text="Location: Field 1"
            android:textSize="14sp"
            android:textColor="#555555" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
