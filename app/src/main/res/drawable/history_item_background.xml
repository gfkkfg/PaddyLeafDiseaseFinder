<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#B3D3D3D3" /> <!-- Shadow color with transparency -->
            <corners android:radius="8dp" /> <!-- Rounded corners for shadow -->
        </shape>
    </item>

    <!-- Main Background Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Rounded corners for main background -->
        </shape>
    </item>
</layer-list>
